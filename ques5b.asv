clc;
clear;
close all;
im = double(imread('Assignment2/face.jpg'));
output = zeros(size(im))
sz = size(im);
xc = round(sz(1)/2);
yc = round(sz(2)/2);
alpha = 2;
rmax = 200; 
for x=1:sz(1)
    for y=1:sz(2)
        dx = x - xc;
        dy = y - yc;
        r = sqrt (dx*dx + dy*dy);
        beta = atan2(dy,dx) + (alpha*((rmax-r)/rmax));
        
        if r <= rmax
            x' = xc + r*cos(beta);
            y' = yc + r*cos(beta);
        end
        
    end
end

